{
    "log-directory":"log",
    "date-time-formate":"DD.MM.YYYY hh:mm:ss",
    "file-rotate-date-formate":".dd-MM-yyyy",
    "json-formate":false,
    "max-files":2,
    "files-size":1000000,
    "colorize":true,
    "exit-on-error":false,
    "mongodb":{
        "db":"mongodb://localhost:27017/log",
        "username":"",
        "password":"",
        "storeHost":true,
        "collection":"log",
        "error-collection":"exceptions",
        "label":"listener"
    },
    "email":{
        "to":"email id",
        "from":"email id",
        "host":"smtp.gmail.com",
        "username":"email id",
        "password":"password",
        "ssl":true,
        "tls":false,
        "subject":"{{level}} {{msg}}",
        "html":true
    }
}
